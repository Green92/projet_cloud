{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12" style="margin-top: 20px">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Risk</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for id, user in data %}
                    <tr>
                        {% for key, field in user %}
                            <td>{{ field }}</td>
                        {% endfor %}
                        <td>
                            <a href="{{ path('request_loan', {'id':id}) }}" type="button" class="btn btn-info">
                                <span class=" glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                            </a>
                            <a href="{{ path('edit_account', {'id':id}) }}" type="button" class="btn btn-warning">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </a>
                            <a href="{{ path('delete_account', {'id':id}) }}" type="button" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12" style="margin-top: 20px">
        <h3>Add account</h3>
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-default pull-right" value="Add" />
        {{ form_end(form) }}
    </div>
{% endblock %}